# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
tab_width = 2
charset = utf-8
indent_size = 2
indent_style = space
end_of_line = lf
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_size = 4

[*.ps1]
end_of_line = crlf
max_line_length = 115

[*.sh]
indent_size = 2
max_line_length = 80
shell_variant = posix

[*.yml]
indent_size = 2
